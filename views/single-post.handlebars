<div class="text-center">
    <h2>{{title}}</h2>
    <div>
        <p>Created by: {{user.username}} on {{format_date date_created}}</p>
    </div>
</div>

{{#if post.comments}}
<div class="card">
    <div class="card-header">
        <h3>Comments:</h3>
    </div>
    <section class="card-body">
        <div class="comments">
            <section class="comment">
                <div>
                    {{user.username}} on {{format_date post.date_created}}
                </div>
                <div class="text">
                </div>
            </section>
            {{/if}}
        </div>
    </section>
</div>

<!--Add new comment section -->
{{#if logged_In}}
    <form id="comment-form" class="card">
        <div class="card-header">
            <h3>Add New Comment here!</h3>
        </div>
        <div class="card-body">
            <input type="hidden" name="post-id" value="{{post.id}}" />

            <label class="form-label" for="comment-body">Comment</label>
            <textarea name="comment-body" class="form-input"></textarea>

            <button type="submit" class="btn">Submit</button>
        </div>
    </form>
{{/if}}

<script src="/js/comment.js"></script>