{{#each posts as |post| }}
<div class="post">
    <h2><a href="/post/{{id}}">{{title}}</a></h2>
    <p>{{content}}</p>
    <div class="post-details">
        <p class="created-by">Created by: {{user.username}}</p>
        <p class="created-on">Created on {{format_date date_created}}</p>
    </div>
</div>
{{/each}}